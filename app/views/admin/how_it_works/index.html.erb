

<div class="row">
  <div class="col-md-8">
    <h1 style="text-align:right;">Listing How It Works</h1>
  </div>
  <div class="col-md-4 text-right">
    <h1><%= link_to "New", new_admin_how_it_work_path, class: "btn btn-primary" %></h1>
  </div>
</div>

<table id="how_it_works" class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @how_it_works.each do |how| %>
      <tr>
        <td><%= raw(how.context) %></td>
        <td><%= image_tag how.how_it_works_image.url(:thumb) %></td>
        <td><%= image_tag how.how_it_works_video.url %></td>
        <td><%= link_to 'Edit', edit_admin_how_it_work_path(how) %></td>
        <td><%= link_to 'Destroy',[:admin, how], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<style type="text/css">
  #how_it_works td:first-child{
     text-align: justify;
     width: 40%;
  }
</style>
