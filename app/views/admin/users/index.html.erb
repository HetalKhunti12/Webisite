<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Users</h1>
    </div>
    <div class="col-md-4 text-right">
      <h1><%= link_to 'New User', new_admin_user_path,  :class => "btn btn-default align-center"  %></h1>
    </div>
  </div>
  <div class="table-responsive table-first">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>surname</th>
          <th>first Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.surname %></td>
            <td><%= user.firstname %></td>
            <td><%= user.email %></td>
            <td><%= user.role.name %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
            <td><%= link_to 'Login', "http://entoz.itccrails.com.au/login/#{user.id}", target: "_blank" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

