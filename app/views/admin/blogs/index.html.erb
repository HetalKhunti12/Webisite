<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Listing Blogs</h1>
    </div>
    <div class="col-md-4 text-right">
      <h1><%= link_to "New", new_admin_blog_path, class: "btn btn-primary" %></h1>
    </div>
  </div>

  <div class="table-responsive table-first">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Image</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= image_tag blog.blog_image.url %></td>
            <td class="desc"><%= raw(blog.context) %></td>
            <td><%= link_to '', edit_admin_blog_path(blog), class: "fa fa-pencil-square-o btn-edit" %></td>
            <td><%= link_to '',[:admin, blog], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-dlt fa fa-trash" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
