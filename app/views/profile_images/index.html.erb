
<div class="row">
  <div class="col-md-8">
    <h1>Listing Profile Images</h1>
  </div>
  <div class="col-md-4 text-right">
    <h1><%= link_to 'New Profile image', new_profile_image_path, :class => "btn btn-default align-center" %></h1>
  </div>
</div>

<table id="myTable" class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Artist profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_images.each do |profile_image| %>
      <tr>
        <td><%= image_tag profile_image.image.url(:thumb) %></td>
        <td><%= profile_image.title %></td>
        <td><%= profile_image.description %></td>
        <td><%= profile_image.artist_profile.p_name if profile_image.artist_profile.present? %></td>
        <!-- <td><%#= link_to 'Show', profile_image %></td> -->
        <td><%= link_to 'Edit', edit_profile_image_path(profile_image) %></td>
        <td><%= link_to 'Destroy', profile_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


