<%#= javascript_include_tag 'ratyrate.js.erb', "data-turbolinks-track" => false %>
<p>
  <strong>Title:</strong>
  <%= @artist_profile.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @artist_profile.short_description %>
</p>

<p>
  <strong>Country:</strong>
  <%= @artist_profile.country.name if @artist_profile.country.present? %>
</p>

<p>
  <strong>State:</strong>
  <%= @artist_profile.state.name if @artist_profile.state.present? %>
</p>


<div class="row">
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @artist_profile, current_user%>
  </div>
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
      Visual Effects: <%= rating_for @artist_profile, "visual_effects", disable_after_rate: true, imdb_avg: true %>
      <br>
      Visual Effects: <%= rating_for_user @artist_profile, current_user, "visual_effects" %>
      <br>
      Original Score: <%= rating_for @artist_profile, "original_score", target: '#nrea', targetScore: '#nrea', single: true %>
      <br>
      Director: <%= rating_for @artist_profile, "original_score" %>
      <br>
      Custome Design: <%= rating_for @artist_profile, "custome_design" %>
    <% end %>
  </div>
  <div id="rea"></div>
  <div id="nrea"></div>
</div>


