<%= form_for @banner, url: admin_banners_path, html: { multipart: true } do |f| %>
	<div class="inner-page clearfix">
	  <div class="container">
	    <div class="inner-ttl">Upload Banners</div>   
	    <div class="form-block "> 
	      <div class="form-padding">
	        <div class="row">
	          <div class="col-md-6 col-sm-6">
	            <div class="text-field">
	            	<%= f.label "Title" %>
              	<%= f.text_field :title, class:  "form-control"  %>
	            </div>
	            <div class="text-field">
	            	<%= f.label "Banner " %>
              	<%= f.file_field :banner, class:  "form-control"  %>
	            </div>
	          </div>
	          <div class="col-md-6 col-sm-6">
	            <div class="text-field">
	            	<%= f.label "Category" %>
              	<%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, selected: @banner.category_id), {:include_blank => 'Select Category'} , class: "form-control" %>
	            </div>
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="container" style="margin-top:30px">
    <div class="cust_detail_btn">
      <div class="text-center"> 
      	<%= f.submit "Save & Close", class: "send-btn" %>
       </div>
    </div>
  </div>
<% end %>