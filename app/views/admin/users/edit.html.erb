<div class="container">
	<h1>Edit User</h1>

	<%= simple_form_for([:admin, @user]) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :surname %>
	    <%= f.input :firstname %>
	    <%= f.select :role_id, options_for_select(Role.all.take(4).to_a.map{|s|[s.name, s.id]}, f.object.role_id)%>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>

</div>
