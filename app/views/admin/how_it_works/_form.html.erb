
  <%= tinymce_assets %>
  <%= form_for([:admin, @how_it_work]) do |f| %>
    <%#= f.error_notification %>

      <div class="field">
        <%= f.label :context %></br>
        <%= f.text_area :context,  :class => "tinymce", :rows => 10, :cols => 70 %>
      </div></br>

      <div class="field">
        <%= f.label :how_it_works_image %><br>
        <%= f.file_field :how_it_works_image, label: "Image" %>
      </div></br> 

      <div class="field">
        <%= f.label :how_it_works_video %><br>
        <%= f.file_field :how_it_works_video, label: "Video" %>
      </div></br>
      

    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
