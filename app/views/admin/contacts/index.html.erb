<div class="container">
  <%= form_tag contacts_path, :method => 'get', :id => "contacts_search" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>

  <div class="row">
    <div class="col-md-6">
      <h1>Contacts</h1>
    </div>
    <div class="col-md-6 text-right">
      <h1><%= link_to 'New Contact', new_contact_admin_contacts_path, :class => "btn btn-default align-center"  %></h1>
    </div>
  </div>

    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-8" style="margin-bottom:10px">
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %> (current only on first name, last name & email)
      </div>
    </div>
  <% end %>



  <div class="table-responsive table-first">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Company</th>
          <th>Mobile phone</th>
          <th>Phone</th>
          <th>Email</th>
          <th>City</th>
          <th>Category</th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.first_name%> <%= nickname(contact) %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.company %></td>
            <td><%= contact.mobile_phone %></td>
            <td><%= contact.work_phone %></td>
            <td><%= contact.work_email %></td>
            <td><%= contact.work_city %></td>
            <td><%= contact.category %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @contacts, renderer: BootstrapPagination::Rails %>

  <br>
</div>