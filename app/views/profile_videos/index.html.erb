
<div class="row">
  <div class="col-md-8">
    <h1>Listing Profile Videos</h1>
  </div>
  <div class="col-md-4 text-right">
    <h1><%#= link_to 'New Profile video', new_profile_video_path, :class => "btn btn-default align-center" %></h1>
  </div>
</div>

<table id="myTable" class="table table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th>Video</th>
      <th>Title</th>
      <th>Description</th>
      <th>Artist profilr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_videos.each do |profile_video| %>
      <tr>
        <td><%#= profile_video.video_url.html_safe %>
          <% if profile_video.video.present? %>
            <%= video_tag profile_video.video.url, controls: true, type: "video/mp4", size: "400x400" %>
          <% else %>

            <iframe width="400" height="400" src="http://www.youtube.com/embed/15OxnO-uenU?modestbranding=1"       frameborder="0"></iframe>
            <%#= video_tag(["https://www.youtube.com/watch?v=15OxnO-uenU"], :size => "320x240", :controls => true, type: "video/youtube") %>
            <%#= video_tag profile_video.video_url, controls: true, size: "400x400", type: "video/mp4" %>
          <% end %>
        </td>
        <td><%= profile_video.title %></td>
        <td><%= profile_video.description %></td>
        <td><%#= profile_video.artist_profile.p_name if profile_video.artist_profile.present? %></td>
        
        <td><%#= link_to 'Edit', edit_profile_video_path(profile_video) %></td>
        <td><%#= link_to 'Destroy', profile_video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<script type="text/javascript">
  jwplayer("video").setup({
    primary: "html5",
    flashplayer: "<%=asset_path('jwplayer/jwplayer.flash.swf')%>",
    file: "/test.mp4",
    height: 360,
    width: 640,
    analytics: {
        enabled: false,
       cookies: false
    }
  });
</script>

