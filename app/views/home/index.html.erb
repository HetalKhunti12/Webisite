</div>

<!--FETIRED ARTISTS SECTION-->
<div class="fetured-artists clearfix">
  <div class="fetured-title white"> FEATURED ARTIST <span>Just some words about my career</span> </div>
  <% if @featured_artist.present? %>
    <% @count = 1 %>
    <% @featured_artist.each_slice(4) do |artist| %>
      <% artist.each do|profile| %>
        <div class="col-md-3 col-sm-3 artists-block"> 
          <div class="artists-img"> 
            <% if profile.profile_images.present? %>
              <%= link_to artist_profile_details_artist_profile_path(profile.slug) do %><%= image_tag profile.profile_images.first.image.url %> <% end %>
            <% else %>
              <%= link_to artist_profile_details_artist_profile_path(profile.slug) do %><%= "Image" %> <% end %>
            <% end %>
          </div>
          <div class="pp-text">
            <%= link_to artist_profile_details_artist_profile_path(profile.slug) do %>
              <%= profile.title %>
            <% end %>
          </div>
        </div>
        <% @count += 1 %>
      <% end %>
    <% end %>
  <% end %>
  <div class="text-center mt40"> <%= link_to "VIEW MORE CELEBRITIES", top_artist_profiles_artist_profiles_path, class: "catogory-btn" %></div>
</div>

