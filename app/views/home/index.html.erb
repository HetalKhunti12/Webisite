<!-- SEARCH SECTION -->
<div class="search_sect bg_pink">
  <div class="search_container container ">
    <div class="fetured-title pink bold">
      <div class="text-uppercase white"> What are you looking for? </div>
    </div>

    <%= form_tag search_home_index_path, :method => 'get', id: "register_form" do %>
      <div class="col-md-12 no-padding home_search">
        <div class="col-md-2 col-sm-2 search-text">
          <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name), :prompt => "Select Category" , class: "form-control" %>
        </div>

        <div class="col-md-2 col-sm-2 search-text">
          <%= select_tag :sub_category_id,"", :prompt => "Select Sub Category" , class: "form-control", id: "sub_categories" %>
        </div>

        <div class="col-md-2 col-sm-2 search-text key">
          <%= text_field_tag :keywords, '', class: "form-control", placeholder: "Keywords:"%>
        </div>

        <div class="col-md-2 col-sm-2 search-text">
          <%= select_tag :location2, options_for_select(Category::CITYES), :prompt => "Select Location", class: "form-control" %>
        </div>
        <div class="col-md-2 col-sm-2 search-text dt">
          <input type="text" class="form-control" name="date" id="datepick" placeholder="Date & Time:" />
        </div>
        <div class="col-md-2 col-sm-2 search-text">
          <%= select_tag :price, options_for_select(ArtistProfile::PRICING), :prompt => "Select Budget", class: "form-control" %>
        </div>
        <div class="col-md-2 col-sm-2 search-text key">
          <%= submit_tag "Search", :name => nil, class: "btn-search products_search" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


