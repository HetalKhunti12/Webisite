<%= tinymce_assets %>
<%= form_for([:admin, @blog]) do |f| %>
  <%#= f.error_notification %>

    <div class="field">
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    </div></br>

    <div class="field">
      <%= f.label :context %><br>
      <%= f.text_area :context,  :class => "tinymce", :rows => 10, :cols => 70 %>
    </div></br>

    <div class="field">
      <%= f.label :blog_image %><br>
      <%= f.file_field :blog_image, label: "Image" %>
    </div></br>    
    

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
<%= tinymce %>